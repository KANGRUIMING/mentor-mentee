/* 页面容器样式 */
.container {
    padding: 20rpx;
    background-color: #f8f8f8;
    min-height: 100vh;
  }
  
  /* 用户信息容器样式 */
  .userinfo {
    background-color: #ffffff;
    padding: 20rpx;
    border-radius: 10rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  }
  
  /* 文本样式 */
  .userinfo text {
    display: block;
    font-size: 32rpx;
    color: #333333;
    margin-bottom: 10rpx;
  }
  
  /* 图片样式 */
  .userinfo image {
    width: 100%;
    height: auto;
    margin-top: 20rpx;
    border-radius: 10rpx;
  }
  
  /* 按钮样式 */
  .button {
    background-color: #1aad19;
    color: #ffffff;
    border-radius: 5rpx;
    padding: 10rpx 20rpx;
    text-align: center;
    margin-top: 20rpx;
    font-size: 32rpx;
  }
  
  /* 标题样式 */
  .title {
    font-size: 40rpx;
    font-weight: bold;
    color: #333333;
    margin-bottom: 20rpx;
    text-align: center;
  }
  
  /* 副标题样式 */
  .subtitle {
    font-size: 36rpx;
    color: #666666;
    margin-bottom: 20rpx;
    text-align: center;
  }
  