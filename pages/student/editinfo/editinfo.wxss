.container {
    padding: 20px;
  }
  
  .form {
    display: flex;
    flex-direction: column;
  }
  
  input, textarea {
    margin-bottom: 10px;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
  }
  
  button {
    margin-top: 10px;
    padding: 10px;
    background-color: #1aad19;
    color: white;
    border: none;
    border-radius: 4px;
  }
  
  image {
    width: 100px;
    height: 100px;
    margin-top: 10px;
  }
  